//    MODE

//    Calculator
proc Calculator (float $operations, float $digits[])
{

    if ($operations == 0)
    {
        print ("\n" + "Add: ");
        print (Add($digits));
    }
    else if ($operations == 1)
    {
        print ("\n" + "Subtract: ");
        print (Subtract($digits));
    }
    else if ($operations == 2)
    {
        print ("\n" + "Multiply: ");
        print (Multiply($digits));
    }
      else if ($operations == 3)
    {
        print ("\n" + "Division: ");
        print (Divide($digits));
    }
       else if ($operations == 4)
    {
        print ("\n" + "To the Power: ");
        print (Power($digits));
    }
       else if ($operations == 5)
    {
        print ("\n" + "Mean: ");
        print (Mean($digits));
    }